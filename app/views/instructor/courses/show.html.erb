<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"> <span class = "underline bold"> Course Title:</span> <span> "<%= @course.title %>" </span> </h1>
  <br />
    <div class ="text-center">
     <h1 class="text-center underline bold">Sections: </h1>
  <ul>
    <% @course.sections.each do |section| %>
      <li class= "list smallerText">
        <%= section.title %>
      </li>
    <% end %>
  </ul>
  </div>
  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
  </div>
  <br />
  <h1 class="text-center smallerText"> <span class = "underline bold"> Course Description:</span> <span> "<%= @course.description %>"</span> </h1>
  <br />
  <h1 class="text-center evenSmallerText"><span class = "underline bold">Course cost:</span> <span>  <%= number_to_currency(@course.cost) %></span></h1>
  <br />
  <div class ="text-center">
   <%= link_to 'Preview As Student...', course_path(@course), class: 'btn btn-warning' %>
   </div>
  <br class="clr" />
  <iframe src="https://giphy.com/embed/WP2nRF0qecF9dnEIno" width="270" height="480" frameBorder="0" class="center-block" allowFullScreen></iframe>
  <br />
</div>
