<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"> <span class = "underline bold"> Course Title:</span> <span> "<%= current_course.title %>" <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning' %> </span> </h1>
  <br />
  <h1 class="text-center smallerText"> <span class = "underline bold"> Course Description:</span> <span> "<%= current_course.description %>"</span> </h1>
  <br />
  <h1 class="text-center evenSmallerText"><span class = "underline bold">Course cost:</span> <span>  <%= number_to_currency(current_course.cost) %></span></h1>
  <br />
  <br class="clr" />
  <% if current_course.image.url %>
  <%= image_tag current_course.image.url, class: 'img-fluid img-center' %>
  <% end %>
  <div class ="text-center">
    <h1 class="text-center bold">Sections:<span class = "underline bold"></span>     <span> <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-md' %> </span> </h1>
    <br />
        <ul><% current_course.sections.each do |section| %>
        <li class= "list smallerText">
          <%= section.title %>  <span class= 'text-center'><%= link_to 'Delete Section', instructor_course_section_path(current_course, section), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger button_things' %></span>

          <span class= 'text-center'>  <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-md' %> </span>

          <% if section.lessons.length > 0 %>
          <li class = 'list pad_left'>
            <% section.lessons.each do |lesson| %>
               <b><%= lesson.title %></b>
                -
                <%= lesson.subtitle %>
                <br />
            <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <br />

  <iframe src="https://giphy.com/embed/WP2nRF0qecF9dnEIno" width="270" height="480" frameBorder="0" class="center-block" allowFullScreen></iframe>
  <br />
</div>
