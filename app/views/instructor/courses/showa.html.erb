<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"> <span class = "underline bold"> Course Title:</span> <span> "<%= current_course.title %>" <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning' %> </span> </h1>
  <br />
  <h1 class="text-center smallerText"> <span class = "underline bold"> Course Description:</span> <span> "<%= current_course.description %>"</span> </h1>
  <br />
  <h1 class="text-center evenSmallerText"><span class = "underline bold">Course cost:</span> <span>  <%= number_to_currency(current_course.cost) %></span></h1>
  <br />
  <br class="clr" />
  <% if current_course.image.url %>
    <%= image_tag current_course.image.url, class: 'img-fluid img-center' %>
  <% end %>
  <div class ="text-center">
    <h1 class="text-center bold">Sections:<span class = "underline bold"></span>     </h1>
    <br />
    <ul class= "sections">
    <% current_course.sections.rank(:row_order).each do |section| %>
        <li class = 'list smaller-text' data-update-url="<%= instructor_section_path(section) %>">
          <%= section.title %>
           <span class= 'text-center'><%= link_to 'Delete Section', instructor_course_section_path(current_course, section), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger button_things' %></span>
          <span class= 'text-center'>
           <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-md' %> </span>
        </li>
          <% if section.lessons.length > 0 %>
            <ul class="lessons">
              <% section.lessons.rank(:row_order).each do |lesson| %>
                <li class = 'list pad_left' data-update-url="<%= instructor_lesson_path(lesson) %>">
                  <b><%= lesson.title %></b>
                  -
                  <%= lesson.subtitle %>
                  <span><%= link_to 'Delete Lesson', instructor_section_lesson_path(section, lesson), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger button_things' %></span>
                  <br />
                </li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      </ul>
    </div>
    <br />
    <script>
      $(function() {
        $('.sections').sortable({
          update: function( event, ui ) {
            $.ajax({
              type: 'PUT',
              url: ui.item.data('update-url'),
              dataType: 'json',
              data: { section: { row_order_position: ui.item.index()}}
            });
          }
        });

        $('.lessons').sortable({
          update: function( event, ui ) {
            $.ajax({
              type: 'PUT',
              url: ui.item.data('update-url'),
              dataType: 'json',
              data: { lesson: { row_order_position: ui.item.index() } }
            });
          }
        });
       });
    </script>
  </div>
