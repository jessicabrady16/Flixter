<br />
<div class="booyah-box col-10 offset-1">
<br />
  <h1 class="text-center">Learn something today!</h1>
  <hr />
  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course), class: "underline" %>
    </h2>
    <br />
    <div class="row">
      <div class="col-sm-8 col-12">
      <h4 class = 'underline'> Course Description: </h4>
      <br />
        <%= course.description %>
      </div>
      <div class="col-sm-4 col-12 text-center">
      <br />
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <br class="clr" />
  <% end %>
</div>
