<br />
<div class="booyah-box opa col-10 offset-1">
  <div class= 'row'>
    <div class= "col-12">
      <br />
      <h1 class= "text-center img-center"><%= @course.title %></h1>
      <div class = "text-center">
        <% if @course.image.url%>
          <%= image_tag @course.image.url, class: 'img-fluid' %>
        <% end %>
        <br />
        <br />
          <hr />
      </div>
    </div>
  </div>
  <div class = "row">
    <div class="col-4 pad-left">
      <div class = "row ">
        <h5 class = 'underline inline' > Cost:</h5>
        &nbsp;
        &nbsp;
        <h5 class = "badge badge-primary inline">
          Human Cost:
          <br />
          <%= number_to_currency @course.cost %>
        </h5>
        &nbsp;
        &nbsp;
        <h5 class = "badge badge-primary inline">
          Superior Cat Cost:
          <br />
          <span> ðŸ¥«<%= (@course.cost/3).to_i %> T.C. (tuna cans) </span>
        </h5>
      </div>
      <br />
      <div class = "row">
        <h5 class = 'underline inline' > Duration:</h5>
        &nbsp;
        <> hours
        </div>
        <br />
        <div class = "row">
          <h5 class = 'underline inline' > Created by: </h5>
          &nbsp;
          &nbsp;
          <div class = "inline"> <%= @course.user.email %> </div>
        </div>
        <% if current_user && current_user == @course.user %>
          <br />
          <br />
          <div class = left>
            <%= link_to 'Adminstrator', instructor_course_path(@course), class: 'btn btn-danger btn-large left'  %>
          <% end %>
          <%= link_to 'Learn More', courses_path, class: 'btn btn-success left' %>
        </div>
      </div>
      <div class="col-8  border-left">
        <h4 class = 'underline text-left' > Description: </h4>
        <br />
        <%= @course.description %>
      </div>
      <br />
      <br />
      <br />
    </div>
    <hr />
    <div class="col-12">
      <% @course.sections.each do |section| %>
        <br />
        <br />
        <div class="section">
          <h3>
            <%= section.title %>
          </h3>
          <div class="row">
            <% section.lessons.each do |lesson| %>
              <div class="col-12 col-sm-6">
                <div class="lesson text-center">
                  <br />
                  <%= link_to lesson_path(lesson) do %>
                    <b><%= lesson.title %></b>
                    <br />
                    <%= lesson.subtitle %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <br class="clr" />
        </div>
      <% end %>
    </div>
  </div>
</div>
