<br />
<div class="booyah-box col-10 offset-1">
  <h1><%= @course.title %></h1>
  <br />
  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <h4 class = 'underline' > Cost: </h4>
      <span class="badge badge-default">
        <%= number_to_currency @course.cost %>
      </span>
    </div>
    <div class="col-sm-8 col-12">
      <h4 class = 'underline' > Description: </h4>
      <%= @course.description %>
    </div>
    <br />
    <br />
    <% if current_user && current_user == @course.user %>
      <br />
      <br />
      <%= link_to 'Adminstrator', instructor_course_path(@course), class: 'btn btn-danger btn-large'  %>
    <%end%>
    <%= link_to 'Learn More', courses_path, class: 'btn btn-success' %>
  </div>
</div>
